<h1 class="text-center">Cocktails</h1>
<br>
<br>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <%= link_to (cocktail) do %>
        <div class="col-xs-12 col-sm-6 col-lg-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= cocktail.picture %> );">
            <div class="card-category"> <%= cocktail.name %> </div>
            <div class="card-description"> <p> <%= cocktail.ingredients.map(&:name).join(', ') %> </p> </div>
            <div class="card-user">
              <%= link_to edit_cocktail_path(cocktail) do %>
                <i class="fa fa-pencil" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



<%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn btn-info' %>
